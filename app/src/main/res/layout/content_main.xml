<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ssorenson.testapp1.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="900dp"
        android:layout_height="63dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textSize="35sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="588dp"
        android:layout_height="110dp"
        android:ems="10"
        android:hint="@string/edit_text_hint"
        android:inputType="textNoSuggestions|number"
        android:maxLength="7"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.022222223"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <RadioGroup
        android:id="@+id/radio_type"
        android:layout_width="120dp"
        android:layout_height="85dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="124dp"
        app:layout_constraintTop_toBottomOf="@+id/editText">

        <RadioButton
            android:id="@+id/radio1"
            android:text="@string/radio_button1"
            android:buttonTint="#4c56e5"
            android:layout_width="115dp"
            android:layout_height="36dp"
            android:layout_marginTop="0dp"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="321dp"/>

        <RadioButton
            android:id="@+id/radio2"
            android:text="@string/radio_button2"
            android:buttonTint="#4c56e5"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="463dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/picture_button"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="319dp"
        android:layout_height="0dp"
        android:text="@string/button"
        android:textSize="36sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/radio_type"/>

</android.support.constraint.ConstraintLayout>
